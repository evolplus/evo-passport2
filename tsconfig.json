{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "module": "Node16",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}